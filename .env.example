# Enhanced WhatsApp Voice Agent V2 Configuration
# This file contains the actual configuration for testing

# ======================
# CORE API KEYS
# ======================
# OpenRouter API Key (for LLM access)
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# WhatsApp Business API Configuration
WHATSAPP_BUSINESS_TOKEN=your-whatsapp-business-token
WHATSAPP_VERIFY_TOKEN=whatsapp_agent_v2_verify
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# ======================
# LLM CONFIGURATION
# ======================
# Default LLM Provider: openrouter, gemini, local
DEFAULT_LLM_PROVIDER=openrouter

# OpenRouter Models
OPENROUTER_DEFAULT_MODEL=deepseek/deepseek-chat
# Alternative free models:
# - google/gemini-flash-1.5
# - microsoft/phi-3-mini-128k-instruct:free
# - meta-llama/llama-3.2-3b-instruct:free

# Gemini Models
GEMINI_DEFAULT_MODEL=gemini-1.5-flash
# Alternative models:
# - gemini-1.5-pro
# - gemini-pro

# ======================
# TTS CONFIGURATION
# ======================
# Enable/Disable TTS
TTS_ENABLED=true

# TTS Language and Voice
TTS_LANGUAGE=pt-BR
TTS_VOICE=pt-BR-Wavenet-A

# Coqui TTS Settings
COQUI_MODEL_NAME=tts_models/pt/cv/vits
COQUI_LANGUAGE=pt
COQUI_SPEAKER_IDX=0

# ======================
# STT CONFIGURATION
# ======================
# Whisper Model Configuration
WHISPER_MODEL_SIZE=base
WHISPER_LANGUAGE=pt
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# ======================
# DATABASE CONFIGURATION
# ======================
# Database URL (SQLite by default)
DATABASE_URL=sqlite:///./agent_database.db

# Alternative database examples:
# PostgreSQL: postgresql://user:pass@localhost:5432/dbname
# MySQL: mysql://user:pass@localhost:3306/dbname

# ======================
# SYSTEM LIMITS
# ======================
# Maximum audio file size in MB
MAX_AUDIO_SIZE_MB=25

# Maximum audio duration in seconds
MAX_AUDIO_DURATION=300

# Rate limiting per minute
RATE_LIMIT_PER_MINUTE=100

# Maximum text length for processing
MAX_TEXT_LENGTH=10000

# ======================
# SERVER CONFIGURATION
# ======================
# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# Enable debug mode
DEBUG=true

# Environment: development, production
ENVIRONMENT=development

# ======================
# SECURITY
# ======================
# Secret key for JWT tokens
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ======================
# LOGGING
# ======================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=../logs/enhanced_agent.log

# Enable conversation logging
ENABLE_CONVERSATION_LOGGING=true

# ======================
# MONITORING
# ======================
# Enable Prometheus metrics
ENABLE_METRICS=false

# Metrics port
METRICS_PORT=9090

# ======================
# OPTIONAL INTEGRATIONS
# ======================
# Twilio (alternative for WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379/0

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Enable auto-reload in development
AUTO_RELOAD=true

# Enable API documentation
ENABLE_DOCS=true

# Enable test endpoints
ENABLE_TEST_ENDPOINTS=true